{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://i5.pages.rwth-aachen.de/factdag/reshare-w3c-member-submission/schemas/message/abbrev_contract_request.schema.json",
  "title": "AbbrevContractRequest message",
  "$ref": "https://i5.pages.rwth-aachen.de/factdag/reshare-w3c-member-submission/schemas/message/message.schema.json",
  "properties": {
    "messageType": {
      "const": "AbbrevContractRequest"
    },
    "contract": {
      "$ref": "https://i5.pages.rwth-aachen.de/factdag/reshare-w3c-member-submission/schemas/patial_dtc.schema.json",
      "required": [
        "sender",
        "receiver",
        "facts",
        "timestamp",
        "baseIRI",
        "receiverSig"
      ],
      "properties": {
        "sender": {
          "required": [
            "authID",
            "cert",
            "type",
            "encoding"
          ]
        },
        "receiver": {
          "required": [
            "authID",
            "cert",
            "type",
            "encoding"
          ]
        },
        "receiverSig": {
          "required": [
            "sig",
            "type",
            "encoding"
          ]
        },
        "facts": {
          "items": {
            "required": [
              "factID",
              "serialization"
            ],
            "oneOf": [
              {
                "required": [
                  "sha256"
                ]
              },
              {
                "required": [
                  "sha384"
                ]
              },
              {
                "required": [
                  "sha512"
                ]
              }
            ]
          }
        }
      }
    }
  },
  "required": [
    "contract"
  ]
}